{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Development Server",
			"type": "shell",
			"command": "npm run dev",
			"isBackground": true,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "Setup Database",
			"type": "shell",
			"command": "npx prisma db push --accept-data-loss && npx prisma generate && npx tsx prisma/seed.ts"
		},
		{
			"label": "Push Database Schema",
			"type": "shell",
			"command": "npx prisma db push --accept-data-loss"
		}
	]
}